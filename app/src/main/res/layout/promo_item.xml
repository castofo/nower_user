<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

  <!-- A CardView that contains a TextView -->
  <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/global_spacing_4"
    app:cardUseCompatPadding="true">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <ImageView
        android:id="@+id/promo_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/promo_item_image_height"
        android:adjustViewBounds="true"
        android:background="@color/gray"/>

      <TextView
        android:id="@+id/promo_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/global_spacing_16"
        android:layout_marginStart="@dimen/global_spacing_16"
        android:layout_marginTop="@dimen/global_spacing_24"
        android:textColor="@color/black"
        android:textSize="@dimen/global_text_24"
        tools:text="75 % off in Nike Shoes"/>

      <TextView
        android:id="@+id/promo_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/global_spacing_16"
        android:layout_marginStart="@dimen/global_spacing_16"
        android:textSize="@dimen/global_text_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/promo_title"
        tools:text="20 available"/>

      <TextView
        android:id="@+id/promo_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/global_text_24"
        android:layout_marginEnd="@dimen/global_text_16"
        android:layout_marginStart="@dimen/global_text_16"
        android:layout_marginTop="@dimen/global_text_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/promo_subtitle"
        tools:text="Non accusamus fuga. Saepe quia libero neque expedita provident. Aspernatur consequatur voluptas nemo ea labore vitae. Ut minima eum rerum veniam aut exercitationem quod."/>
    </LinearLayout>
  </android.support.v7.widget.CardView>
</LinearLayout>
