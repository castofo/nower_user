<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/ll_branch_container"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  app:behavior_hideable="true"
  app:behavior_peekHeight="@dimen/bottom_sheet_peek_height"
  app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

  <FrameLayout
    android:id="@+id/fl_branch_header"
    style="@style/BranchHeaderBottomSheet"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_sheet_peek_height">

    <android.support.v7.widget.AppCompatImageView
      android:id="@+id/iv_branch_container_backward"
      style="@style/BranchHeaderBackward"
      android:layout_width="@dimen/navigation_controls_width"
      android:layout_height="match_parent"
      android:layout_gravity="center|start"
      android:padding="@dimen/navigation_controls_padding"/>

    <LinearLayout
      android:id="@+id/ll_branch_title"
      style="@style/BranchHeaderBottomSheet"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginEnd="@dimen/navigation_controls_width"
      android:layout_marginStart="@dimen/navigation_controls_width"
      android:orientation="vertical">

      <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_branch_header_title"
        style="@style/BranchHeaderTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/placeholder_title"/>

    </LinearLayout>

    <android.support.v7.widget.AppCompatImageView
      android:id="@+id/iv_branch_container_forward"
      style="@style/BranchHeaderForward"
      android:layout_width="@dimen/navigation_controls_width"
      android:layout_height="match_parent"
      android:layout_gravity="center|end"
      android:padding="@dimen/navigation_controls_padding"/>

  </FrameLayout>

  <LinearLayout
    style="@style/BranchContentBottomSheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatTextView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:text="CONTENT"
      android:textColor="@color/black"/>

  </LinearLayout>

</LinearLayout>
